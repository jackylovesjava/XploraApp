<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <!-- The PullToRefreshGridView replaces a standard RecyclerView widget. -->
    <com.handmark.pulltorefresh.library.extras.recyclerview.PullToRefreshRecyclerView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_hobby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrDrawable="@drawable/android"
        ptr:ptrMode="pullFromEnd"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/new_user_guide_bottom_bg"
        >
        <TextView
            android:id="@+id/tip_select_hobby"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#00FFFF"
            android:text="@string/tip_select_hobby"
            android:paddingLeft="10dp"
            />
        <Button
            android:id="@+id/select_hobby_confirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="确定"
            android:layout_gravity="center_vertical"
            android:textColor="#00FFFF"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:background="@drawable/bg_action_btn"
            />
    </LinearLayout>
</RelativeLayout>