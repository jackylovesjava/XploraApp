<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/select_city_cityName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:textColor="#00FFFF"
        android:textSize="22sp"
        android:text="北京"
        />
    <cn.com.xplora.xploraapp.customUI.CoverFlowView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coverflow"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:coverflowGravity="center_vertical"
        app:coverflowLayoutMode="wrap_content"
        app:reflectionGap="10dp"
        app:reflectionHeight="30%"
        app:visibleImage="3"
        android:layout_below="@id/select_city_cityName"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/new_user_guide_bottom_bg"
        >
        <TextView
            android:id="@+id/tip_select_city"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:text="@string/tip_select_city"
            android:paddingLeft="10dp"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="确定"
            android:layout_gravity="center_vertical"
            android:textColor="#00FFFF"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_new_user_guide_confirm_btn"
            />
    </LinearLayout>
</RelativeLayout>